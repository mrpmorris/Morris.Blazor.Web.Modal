@using Microsoft.JSInterop
@inject IJSRuntime JSRuntime
@if (Modal is not null)
{
	<CascadingValue Value=@Modal>
		<dialog id="@Modal.Id" class="modal_container @Modal.CssClass @ActiveStatusCss"
			 aria-modal="true" role="dialog" @attributes=Modal.AdditionalAttributes>
			<LayoutView Layout=@Modal.Layout>
				@Modal.ChildContent
			</LayoutView>
		</dialog>
	</CascadingValue>
}